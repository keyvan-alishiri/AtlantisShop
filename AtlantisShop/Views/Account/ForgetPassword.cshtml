@model AtlantisShop.Core.ViewModels.ForgetPasswordViewModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="container">
    <div class="container">
        <!-- Breadcrumb Start-->
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i></a></li>
            <li><a href="/Login">حساب کاربری</a></li>
            <li><a href="/Login">ورود</a></li>
        </ul>
        <!-- Breadcrumb End-->
        <div class="row">
            <!--Middle Part Start-->
            <div id="content" class="col-sm-9">
                <h1 class="title">بازیابی کلمه عبور</h1>
                <div class="row">
                  

                    <div class="col-sm-6">
                        @if (!string.IsNullOrEmpty(ViewBag.Message))
                        {
                            <p class="alert alert-info">@ViewBag.Message</p>
                        }

                       
                        <p><strong>برای بازیابی کلمه عبور ایمیل خود را وارد نمایید</strong></p>
                        <form method="post">
                            <div class="form-group">
                                <label class="control-label" for="input-email">ایمیل خود را وارد کنید</label>
                                <input type="text" required asp-for="Email" placeholder="ایمیل " id="input-email" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                           
                            <input type="submit" value="بازیابی کلمه عبور" class="btn btn-primary">
                        </form>
                    </div>
                </div>
            </div>
            <!--Middle Part End -->

        </div>
    </div>
</div>

