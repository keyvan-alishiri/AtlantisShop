@model AtlantisShop.Core.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "ورود به سایت";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="container">
    <div class="container">
        <!-- Breadcrumb Start-->
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i></a></li>
            <li><a href="/Login">حساب کاربری</a></li>
            <li><a href="/Login">ورود</a></li>
        </ul>
        <!-- Breadcrumb End-->
        <div class="row">
            <!--Middle Part Start-->
            <div id="content" class="col-sm-9">
                <h1 class="title">حساب کاربری ورود</h1>
                <div class="row">
                    <div class="col-sm-6">
                        <h2 class="subtitle">مشتری جدید</h2>
                        <p><strong>ثبت نام حساب کاربری</strong></p>
                        <p>با ایجاد حساب کاربری میتوانید سریعتر خرید کرده، از وضعیت خرید خود آگاه شده و تاریخچه ی سفارشات خود را مشاهده کنید.</p>
                        <a href="/Register" class="btn btn-primary">ادامه</a>
                    </div>

                    <div class="col-sm-6">
                        @if (!string.IsNullOrEmpty(ViewBag.Message))
                        {
                            <p class="alert alert-info">@ViewBag.Message</p>
                        }
                        <h2 class="subtitle">مشتری قبلی</h2>
                        <p><strong>من از قبل مشتری شما هستم</strong></p>
                        <form method="post">
                           <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                            <div class="form-group">
                                <label class="control-label" for="input-email">ایمیل یا شماره موبایل</label>
                                <input type="text" required asp-for="Username" placeholder="ایمیل یا شماره موبایل" id="input-email" class="form-control">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="input-password">رمز عبور</label>
                                <input type="password" required asp-for="Password" placeholder="رمز عبور" id="input-password" class="form-control">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <br>
                                <input type="checkbox" class="checkbox" asp-for="RememberMe" />مرا به خاطر بسپار
                                <br />
                                <a href="/ForgetPassword">فراموشی رمز عبور</a>
                            </div>
                            <input type="submit" value="ورود" class="btn btn-primary">
                        </form>
                    </div>
                </div>
            </div>
            <!--Middle Part End -->
            
        </div>
    </div>
</div>

