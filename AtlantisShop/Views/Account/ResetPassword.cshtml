@model AtlantisShop.Core.ViewModels.ResetPassswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="container">
    <div class="container">
        <!-- Breadcrumb Start-->
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i></a></li>
            <li><a href="/Login">حساب کاربری</a></li>
            <li><a href="/Login">ورود</a></li>
        </ul>
        <!-- Breadcrumb End-->
        <div class="row">
            <!--Middle Part Start-->
            <div id="content" class="col-sm-9">
                <h1 class="title">بازیابی کلمه عبور</h1>
                <div class="row">


                    <div class="col-sm-6">
                        @if (!string.IsNullOrEmpty(ViewBag.Message))
                        {
                            <p class="alert alert-info">@ViewBag.Message</p>
                        }


                        <p><strong>کلمه عبور جدید خود را وارد کنید</strong></p>
                        <form method="post">
                            <input type="hidden" asp-for="ActivateCode" value="@ViewBag.ActivateCode" />
                            <div class="form-group">
                                <label class="control-label" for="input-email">کلمه عبور جدید</label>
                                <input type="password" required asp-for="Password" placeholder="کلمه عبور " id="input-email" class="form-control">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="input-email">تکرار کلمه عبور جدید</label>
                                <input type="password" required asp-for="ConfirmPassword" placeholder="تکرار کلمه عبور " id="input-email" class="form-control">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <input type="submit" value="بازیابی کلمه عبور" class="btn btn-primary">
                        </form>
                    </div>
                </div>
            </div>
            <!--Middle Part End -->

        </div>
    </div>
</div>


